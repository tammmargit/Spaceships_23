@model ShopTARge23.Models.OpenWeathers.OpenWeatherSearchViewModel;

<h1>Search City</h1>

<div>
    <div class="container">
        <form method="post">
            <div class="container">
                <div class="form-group col-md-offset-3 col-md-5">
                    <h2>Search the forecasts in a City</h2>
                    <label asp-for="CityName" style="font-family: 'Times New Roman'"></label>
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>
                <div class="container">
                    <div class="form-group col-md-offset-3 col-md-5">
                        <button asp-controller="openWeathers" asp-action="searchCity" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>