@model ShopTARge23.Models.OpenWeathers.OpenWeatherViewModel

<div class="container">
    <h2>@Html.DisplayFor(model => model.City)</h2>
    <h2>Forecast for the selected city</h2>
    <hr />
    <dl class="row text-dark">
        <div class="row mb">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.City)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>
        </div>
        <div class="row mb">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Temp)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Temp) °C</dd>
        </div>
        <div class="row mb">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FeelsLike)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FeelsLike) °C</dd>
        </div>
        <div class="row mb">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Humidity)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Humidity) %</dd>
        </div>
        <div class="row mb">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Pressure)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Pressure) Hpa</dd>
        </div>
        <div class="row mb">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.WindSpeed)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.WindSpeed) Km/h</dd>
        </div>
        <div class="row mb">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        </div>
    </dl>
</div>

<div class="container">
    <form method="get">
        <button asp-controller="openWeathers" asp-action="Index" class="btn btn-success">Return</button>
    </form>
</div>