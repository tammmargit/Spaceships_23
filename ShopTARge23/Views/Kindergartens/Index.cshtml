@model IEnumerable<ShopTARge23.Models.Kindergartens.KindergartensIndexViewModel>


<div class="h1">
    Kindergarten
</div>

@{
    int rowNumber = 1;
}

<div>
    <a asp-action="create" asp-controller="kindergartens" class="btn btn-primary">Create</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">GroupName</th>
                <th scope="col">Children Count</th>
                <th scope="col">Teacher</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergarten in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@kindergarten.GroupName</td>
                    <td>@kindergarten.ChildrenCount</td>
                    <td>@kindergarten.Teacher</td>
                    <td>
                        <a asp-action="details" asp-controller="kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-outline-primary">Update</a>
                        <a asp-action="delete" asp-controller="kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

                rowNumber += 1;
            }

        </tbody>
    </table>
</form>